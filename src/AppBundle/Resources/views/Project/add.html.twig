{% extends 'AppBundle::base.html.twig' %}

{% block page_content %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">SSH key</h3>
                        <div class="box-body">
                            {{ project.gitPublicKey }}
                        </div>
                    </div>
                </div>
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">New project</h3>
                    </div>
                    <form role="form" method="post">
                        <div class="box-body">
                            <div class="form-group">
                                {{ form_row(form.name, {attr: {placeholder:"Enter name", class:"form-control"}}) }}
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                {{ form_row(form.gitSshLink, {attr: {placeholder:"Enter link", class:"form-control"}}) }}
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                {{ form_row(form.type, {attr: {placeholder:"Enter type", class:"form-control"}}) }}
                            </div>
                        </div>
                        <div class="box-footer">
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>

                        {{ form_rest(form) }}
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock page_content %}