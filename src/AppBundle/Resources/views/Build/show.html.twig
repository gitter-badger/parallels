{% extends 'AppBundle::base.html.twig' %}

{% block page_content %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Build details</h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-bordered">
                            <tbody>
                            <tr>
                                <th>#</th>
                                <th>Build ID</th>
                                <th>Progress</th>
                                <th>Start</th>
                                <th>End</th>
                            </tr>
                            <tr>
                                <td>{{ build.id }}</td>
                                <td>{{ build.buildId }}</td>
                                <td>{{ build.progress }}%</td>
                                <td>{{ build.start|date('Y-m-d H:i:s') }}</td>
                                <td>{{ build.end|date('Y-m-d H:i:s') }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock page_content %}